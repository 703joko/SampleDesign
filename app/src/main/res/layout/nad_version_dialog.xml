<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:background="@drawable/nad_top_bg"
    android:backgroundTint="@color/teal_200"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_margin="10.0dip"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/logo_nusantara" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15.0dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:focusable="true"
                android:text="ROM"
                android:textAlignment="gravity"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_rom_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:focusable="true"
                android:text="Nusantara Project"
                android:textAlignment="gravity"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginTop="10.0dip"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:focusable="true"
                android:text="Version"
                android:textAlignment="gravity"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_nad_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:focusable="true"
                android:text="unknown"
                android:textAlignment="gravity"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginTop="10.0dip"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:focusable="true"
                android:text="Codename"
                android:textAlignment="gravity"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_nad_codename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:focusable="true"
                android:text="unknown"
                android:textAlignment="gravity"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginTop="10.0dip"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:focusable="true"
                android:text="Build Type"
                android:textAlignment="gravity"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_build_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:focusable="true"
                android:text="unknown"
                android:textAlignment="gravity"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginTop="10.0dip"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:focusable="true"
                android:text="Build Date"
                android:textAlignment="gravity"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_build_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:focusable="true"
                android:text="unknown"
                android:textAlignment="gravity"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>